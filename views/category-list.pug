extends base

block content

    main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role='main')
        .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
            h1.h2 Catergories
            .btn-toolbar.mb-2.mb-md-0
                .btn-group.mr-2
                    a.btn.btn-sm.btn-outline-secondary(href='/admin/categories/add') add catergory
        .table-responsive
            table.table.table-striped.table-sm
                thead
                    tr
                        th Name
                        th View Products
                        th Delete
                tbody
                    each category in categories
                        tr
                            td= category.title
                            td
                                a.btn.btn-sm.btn-light(href=`/admin/categories/${category.slug}/${category.id}`) View Products
                            td
                                a(href=`/admin/categories/${category.slug}/delete`) Delete