extends base

block content
    main.col-md-9.ml-sm-auto.col-lg-10.px-md-4(role='main')

        .card-deck
            .card.h-75.d-inline-block.border-dark
                .card-body
                    h5.card-title= `GHS ${total || 0}`
                    h6.card-subtitle.mb-2.text-muted Total Sales
                    p.card-text Today
            .card.h-75.d-inline-block.border-dark
                .card-body
                    h5.card-title= `GHS ${totalRefunds || 0}`
                    h6.card-subtitle.mb-2.text-muted Total Refunds
                    p.card-text Today
