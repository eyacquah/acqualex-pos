        br
        br
        br
        section
            h2 Sales
            .table-responsive
                table.table.table-hover
                    thead.thead-dark
                        tr
                            th(scope='col') Order Number
                            th(scope='col') Date
                            th(scope='col') Customer
                            th(scope='col') Order Total
                            th(scope='col') Amount Owed
                            th(scope='col') Total Refund
                            th(scope='col') Edit
                    tbody
                        each order in orders
                            tr
                                td= order.orderNum
                                td= order.date
                                td= order.customer.name
                                td= `GHS ${order.totalAmount}`
                                td= `GHS ${order.totalAmount - order.amountPaid}`
                                td= `GHS ${order.refund.totalAmountRefunded || '0'}`
                                td
                                    a.btn-sm.btn-danger(href=`/admin/orders/${order.id}/refund`) Refund
                                td
                                    a.btn-sm.btn-light(href=`/admin/orders/${order.id}`) Edit
                                td 
                                    a.btn-sm-btn-dark(href=`/admin/orders/${order.id}/invoice`) Invoice
        br
        br
        br
