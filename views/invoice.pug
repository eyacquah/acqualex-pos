    main.container(role='main')
      .d-flex.align-items-center.p-3.my-3.bg-purple.rounded.shadow-sm
        .lh-100
          h2.mb-0.text-dark.lh-100 Acqualex Receipt
          small
            | Importers and suppliers of Glass, Aluminium Profile & Accessories,
            | Photo Frame & General Goods
          br
          small
            | P.O.Box AC Accra Tel: 0302320531 | 0302674625. Mobile:
            | 024469441
          br
          small
            | Location: Banana Inn Sharp Curve Mamprobi & Near Railways Opposite
            | National Investment Bank
      .my-3.p-3.bg-white.rounded.shadow-sm
        h4.border-bottom.border-gray.pb-2.mb-0(style='text-align: center')
          | Receipt
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Order No: ${order.orderNum}`
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray(style='text-align: center')
            strong.d-block.text-gray-dark= `Customer: ${order.customer.name}`
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray.text-right
            strong.d-block.text-gray-dark= order.date
      .my-3.p-3.bg-white.rounded.shadow-sm
        .table-responsive
          table.table.table-striped.table-sm.border-bottom.border-gray.small
            thead
              tr
                th.text-gray-dark Qty.
                th Product
                th Subtotal
            tbody
              each product in order.products
                tr
                  td= product.orderQuantity
                  td= product.type.title
                  td= `GHS ${product.purchasePrice * product.orderQuantity}`
            
      .my-3.p-3.bg-white.rounded.shadow-sm
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Subtotal: GHS ${order.subtotal}`
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Delivery Fee: GHS ${order.deliveryFee}`
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Discount: - GHS ${order.discount}`
        //- .media.text-muted.pt-3
        //-   p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
        //-     strong.d-block.text-gray-dark NHIS/VAT:
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Total: GHS ${order.totalAmount}`
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Paid: GHS ${order.amountPaid}`
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.border-bottom.border-gray
            strong.d-block.text-gray-dark= `Balance: GHS ${order.totalAmount - order.amountPaid}`
      .my-3.p-3.bg-white.rounded.shadow-sm
        .media.text-muted.pt-3
          p.media-body.pb-3.mb-0.small.lh-125.text-right
            strong.d-block.text-gray-dark=` Cashier : ${order.user.name}`
